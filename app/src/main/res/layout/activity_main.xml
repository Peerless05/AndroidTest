<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="448dp"
        android:layout_height="997dp"
        android:src="@drawable/login2"
        android:scaleType="centerCrop"
        android:contentDescription="background"
        android:adjustViewBounds="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <EditText
            android:id="@+id/username"
            android:layout_width="240sp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="354dp"
            android:background="@drawable/edittext_bg"
            android:backgroundTint="@android:color/white"
            android:hint="Username"
            android:fontFamily="@font/pixelify_sans"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="240sp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="@drawable/edittext_bg"
            android:backgroundTint="@android:color/white"
            android:hint="Email"
            android:fontFamily="@font/pixelify_sans"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="240sp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="42dp"
            android:background="@drawable/edittext_bg"
            android:backgroundTint="@android:color/white"
            android:hint="Password"
            android:fontFamily="@font/pixelify_sans"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="20dp" />

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="200dp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/white"
            android:backgroundTintMode="add"
            android:text="LOGIN"
            android:fontFamily="@font/pixelify_sans"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:fontFamily="@font/pixelify_sans"
            android:text="Forgot Password?"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/signinTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:fontFamily="@font/pixelify_sans"
            android:text="Not Yet Registered? Click here!"
            android:textColor="@color/yellow"
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_______________________________________________________"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/pixelify_sans"
            android:gravity="center"
            android:text="Login with"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <!-- Facebook and Google logos side-by-side -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="Facebook Login"
                android:focusable="true"
                android:src="@drawable/ic_facebook" />

            <ImageView
                android:id="@+id/google"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="Google Login"
                android:focusable="true"
                android:src="@drawable/ic_google" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>